{
  "name": "react-component-starter",
  "version": "0.1.0",
  "description": "Starter kit for React components in es6",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "check": "npm run lint && npm run test",
    "lint": "eslint src __tests__",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack src/index.js dist/react-component-starter.js",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/react-component-starter.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "test": "cross-env BABEL_ENV=commonjs jest --config .jestconfig",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "prepublish": "npm run clean && npm run check && npm run build --kill --print"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yangshun/react-component-starter.git"
  },
  "keywords": [
    "react",
    "component",
    "starter",
    "es2015",
    "commonjs",
    "umd"
  ],
  "author": "Tay Yang Shun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yangshun/react-component-starter/issues"
  },
  "homepage": "https://github.com/yangshun/react-component-starter",
  "npmName": "react-component-starter",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.22.0",
    "cross-env": "^3.1.3",
    "enzyme": "^2.7.1",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "jest": "^18.1.0",
    "react": "^15.0.0",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.0.0",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.2"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0",
    "react-dom": "^0.14.0 || ^15.0.0"
  }
}
